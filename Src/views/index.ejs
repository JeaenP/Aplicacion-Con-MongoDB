<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aplicacion</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap-grid.rtl.min.css">
</head>

<body >


    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <form action="/create" method="POST" class="card card-body">
                    <div class="form-group">
                        <input type="text" name="task" placeholder="DEBER" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="description" placeholder="FECHA DE ENTREGA" class="form-control">
                    </div>
                    <button class="btn btn-primary" style="background-color: rgb(0, 100, 128); border-color: rgb(0, 70, 128);">
                        AGREGAR DEBER
                    </button>
                </form>
                <div class="container p-1">

                </div>
                <%  Tasks.forEach(function (task) { %>
                    <div class="container p-1" style="text-align: center;">
                        <form action="/delete" method="POST">
                            <input type="hidden" name = "id" value = "<%= task._id%>" >
                            <card class="card card-body p-2">
                                <h5>
                                    <%= task.task%>
                                </h5>
                                <p>
                                    <%= task.description %>
                                </p>
                                <button class="btn btn-success">
                                    DEBER ENTREGADO
                                </button>
                        </form>
                                <div class = "container p-1">

                                </div>
                                <form action="/edit" method="POST">
                                    
                                    <input type="hidden" name = "id" value = "<%= task._id%>" >
                                    <button class="btn btn-info" style="background-color: rgb(53, 138, 135); border-color: rgb(138, 88, 53); width: 318px;">
                                        CAMBIAR DEBER
                                    </button>
                                    
                                    
                                </form>
                                
                            </card>
                           
                       
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>



</body>

</html>